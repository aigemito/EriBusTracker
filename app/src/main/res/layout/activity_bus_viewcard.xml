<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/holderCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBus"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvPlateNumber2"
            android:layout_width="118dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_medium"
            android:text="PlateNumber :"
            android:textAlignment="viewStart"
            android:textColor="@color/md_grey_600"
            android:textSize="@dimen/font_title_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/editUserImageView"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/deleteUserImageView"
            app:srcCompat="@drawable/baseline_edittext_grey_24" />

        <TextView
            android:id="@+id/attributeTitleTextView"
            android:layout_width="45dp"
            android:layout_height="19dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto_light"
            android:text="# Sits:"
            android:textAlignment="viewStart"
            android:textColor="@color/md_grey_800"
            android:textSize="@dimen/font_body_s_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/priceTitleTextView" />

        <TextView
            android:id="@+id/tvNumberOfSits"
            android:layout_width="136dp"
            android:layout_height="14dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_light"
            android:text="Fairfield"
            android:textAlignment="viewStart"
            android:textColor="@color/md_grey_800"
            android:textSize="@dimen/font_body_s_size"
            app:layout_constraintStart_toEndOf="@+id/attributeTitleTextView"
            app:layout_constraintTop_toBottomOf="@+id/tvBusModel" />

        <TextView
            android:id="@+id/tvPlateNumber"
            android:layout_width="170dp"
            android:layout_height="38dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto_medium"
            android:text="ER-120984"
            android:textAlignment="viewStart"
            android:textColor="@color/md_grey_600"
            android:textSize="@dimen/font_title_size"
            app:layout_constraintEnd_toStartOf="@+id/deleteUserImageView"
            app:layout_constraintHorizontal_bias="0.13"
            app:layout_constraintStart_toEndOf="@+id/tvPlateNumber2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/priceTitleTextView"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_light"
            android:text="BusModel:"
            android:textAlignment="viewStart"
            android:textColor="@color/md_grey_800"
            android:textSize="@dimen/font_body_s_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPlateNumber" />

        <TextView
            android:id="@+id/tvBusModel"
            android:layout_width="193dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_light"
            android:text="Toyota"
            android:textAlignment="viewStart"
            android:textColor="@color/md_grey_800"
            android:textSize="@dimen/font_body_size"
            app:layout_constraintStart_toEndOf="@+id/priceTitleTextView"
            app:layout_constraintTop_toBottomOf="@+id/tvPlateNumber" />

        <ImageView
            android:id="@+id/deleteUserImageView"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_delete_black_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>